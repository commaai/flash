{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "preact"
  ],
  "ignorePatterns": [
    "node_modules",
    "dist",
    ".eslintrc.cjs"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-constant-condition": ["error", { "checkLoops": false }],
    "no-inner-declarations": "off",
    "jest/no-deprecated-functions": "off",
    "jest/no-standalone-expect": "off",
    "jest/valid-describe-callback": "off",
    "jest/valid-expect": "off"
  }
}
